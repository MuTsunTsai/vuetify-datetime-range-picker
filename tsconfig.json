{
	"compilerOptions": {
		"lib": [
			"DOM",
			"ES2024"
		],
		"baseUrl": "./src",
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"declaration": true,
		// "noEmit": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": true
	},
	"include": [
		"./*.ts",
		"./src/**/*.ts",
		"./src/**/*.vue"
	]
}